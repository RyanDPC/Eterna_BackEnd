// ðŸŒ¸ ModÃ¨le Connexion Vocale
model VoiceConnection {
  id        String   @id @default(cuid())
  userId    String
  roomId    String
  isActive  Boolean  @default(true)
  joinedAt  DateTime @default(now())
  leftAt    DateTime?

  // Relations
  user      User @relation(fields: [userId], references: [id], onDelete: Cascade)
  room      Room @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@unique([userId, roomId])
  @@map("voice_connections")
}

// ðŸŒ¸ ModÃ¨le Permission Utilisateur
model UserPermission {
  id       String @id @default(cuid())
  userId   String
  permission String
  granted  Boolean @default(true)
  grantedAt DateTime @default(now())
  grantedBy String?

  // Relations
  user     User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, permission])
  @@map("user_permissions")
}

// ðŸŒ¸ ModÃ¨le Session
model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  isActive  Boolean  @default(true)

  @@map("sessions")
}

// ðŸŒ¸ ModÃ¨le Audit Log
model AuditLog {
  id          String      @id @default(cuid())
  userId      String?
  action      String
  resource    String?
  resourceId  String?
  details     String? // JSON stockÃ© comme texte en SQLite
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime    @default(now())

  @@map("audit_logs")
}


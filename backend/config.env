# Configuration de base
NODE_ENV=development
PORT=3000

# Base de données SQLite (développement local)
DATABASE_URL="file:./dev.db"

# JWT Configuration
JWT_SECRET=eterna_super_secret_jwt_key_2024_local_dev
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=eterna_super_secret_refresh_key_2024_local_dev
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Swagger Configuration
ENABLE_SWAGGER=true
SWAGGER_TITLE=ETERNA Backend API
SWAGGER_DESCRIPTION=API complète pour l'application ETERNA
SWAGGER_VERSION=1.0.0

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/eterna.log

# WebSocket Configuration
WS_PORT=3001
WS_CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Security
BCRYPT_ROUNDS=12
HELMET_ENABLED=true
COMPRESSION_ENABLED=true


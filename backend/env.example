# ===== CONFIGURATION DE LA BASE DE DONNÉES =====
# URL de connexion SQLite (développement local)
DATABASE_URL="file:./dev.db"

# ===== CONFIGURATION JWT =====
# Secret pour la signature des tokens JWT (CHANGER EN PRODUCTION)
JWT_SECRET="votre-secret-jwt-super-securise-changez-cela"
# Durée de validité des tokens JWT
JWT_EXPIRES_IN="7d"
# Durée de validité des tokens de rafraîchissement
JWT_REFRESH_EXPIRES_IN="30d"

# ===== CONFIGURATION DU SERVEUR =====
# Port du serveur HTTP
PORT=8080
# Port du serveur WebSocket
WS_PORT=8081
# Environnement d'exécution
NODE_ENV="development"

# ===== CONFIGURATION CORS =====
# Origines autorisées (séparées par des virgules)
CORS_ORIGIN="http://localhost:3000,http://localhost:5173"
# Credentials autorisés
CORS_CREDENTIALS=true

# ===== CONFIGURATION DE SÉCURITÉ =====
# Taux limite des requêtes (requêtes par minute)
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ===== CONFIGURATION DES LOGS =====
# Niveau de log
LOG_LEVEL="info"
# Dossier des logs
LOG_DIR="logs"

# ===== CONFIGURATION RENDER (PRODUCTION) =====
# URL de l'application frontend sur Render
FRONTEND_URL="https://votre-app-eterna.onrender.com"
# URL de l'API backend sur Render
BACKEND_URL="https://votre-api-eterna.onrender.com"

# ===== CONFIGURATION EMAIL (OPTIONNEL) =====
# Service d'envoi d'emails (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="votre-email@gmail.com"
SMTP_PASS="votre-mot-de-passe-app"

# ===== CONFIGURATION STORAGE (OPTIONNEL) =====
# Service de stockage de fichiers
STORAGE_TYPE="local" # local, s3, cloudinary
STORAGE_PATH="./uploads"
# Pour AWS S3
AWS_ACCESS_KEY_ID="votre-access-key"
AWS_SECRET_ACCESS_KEY="votre-secret-key"
AWS_REGION="eu-west-1"
AWS_BUCKET_NAME="eterna-uploads"

# ===== CONFIGURATION REDIS (OPTIONNEL) =====
# Cache et sessions Redis
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# ===== CONFIGURATION MONITORING =====
# Prometheus metrics
ENABLE_METRICS=true
# Health check
HEALTH_CHECK_INTERVAL=30000

# ===== CONFIGURATION DE DÉVELOPPEMENT =====
# Seed de la base de données
ENABLE_SEED=true
# Logs détaillés
DEBUG=true
# Swagger UI
ENABLE_SWAGGER=true

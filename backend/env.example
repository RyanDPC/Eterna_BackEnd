# Configuration de base
NODE_ENV=production
PORT=3000

# Base de données SQLite (production)
DATABASE_URL="file:./eterna.db"

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_secret_here
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=*

# Swagger Configuration (désactivé en production)
ENABLE_SWAGGER=false
SWAGGER_TITLE=ETERNA Backend API
SWAGGER_DESCRIPTION=API complète pour l'application ETERNA
SWAGGER_VERSION=1.0.0

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Logging
LOG_LEVEL=info

# WebSocket Configuration
WS_PORT=3001
WS_CORS_ORIGIN=*

# Security
BCRYPT_ROUNDS=12
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
